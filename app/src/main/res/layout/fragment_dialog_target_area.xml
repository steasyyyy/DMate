<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    tools:context=".fragments.SettingsDialogFragments.TargetAreaDialogFragment">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="18dp"
        android:text="Blood sugar target area"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText_target_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:ems="10"
        android:hint="Target area minimum"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editText_target_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_target_min"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Target area maximum"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/button_confirm_target_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_target_max"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="Confirm"
        android:textAllCaps="false" />

</RelativeLayout>