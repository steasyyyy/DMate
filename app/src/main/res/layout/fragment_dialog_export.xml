<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".fragments.SettingsDialogFragments.ExportDialogFragment">

    <Button
        android:id="@+id/button_get_pdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="Export all data to PDF"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:padding="12dp"
        android:text="Please use Adobe Acrobat Reader to open PDF. From there, you can export it to other applications like Mail, WhatsApp, Social media etc."
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="16dp"
        android:text="Export"
        android:textSize="18sp" />
</RelativeLayout>