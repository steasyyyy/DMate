<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ExercisesDialogFragment">

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="18dp"
        android:text="Exercises"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/listView_exercises"
        android:layout_width="300dp"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />

    <Button
        android:id="@+id/button_new_exercise"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listView_exercises"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:text="New exercise"
        android:textAllCaps="false" />

    <RelativeLayout
        android:id="@+id/relativeLayout_new_exercise"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_new_exercise"
        android:visibility="gone">

        <Spinner
            android:id="@+id/spinner_select_sport"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView24"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:text="Sportive activity"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editText_exercise_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner_select_sport"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Number of exercise units"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/button_confirm_new_exercise"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/editText_exercise_units"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="62dp"
            android:text="Confirm"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_cancel_new_exercise"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/button_confirm_new_exercise"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="62dp"
            android:text="Cancel"
            android:textAllCaps="false" />
    </RelativeLayout>

    <Button
        android:id="@+id/button_confirm_exercises"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout_new_exercise"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:text="Confirm"
        android:textAllCaps="false" />
</RelativeLayout>