<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/holo_green_light</item>
        <item name="colorPrimaryDark">@android:color/holo_green_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">true</item>
        <item name="android:actionBarSize">56dp</item>
        <item name="android:textColorPrimary">@color/primary_text_material_dark</item>
        <item name="android:textColorPrimaryInverse">@color/primary_text_material_light</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBarStyle</item>
    </style>

    <style name="AppTheme.ActionBarStyle" parent="Theme.AppCompat.Light">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBarStyle.TitleTextStyle</item>
    </style>

    <style name="AppTheme.ActionBarStyle.TitleTextStyle" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/primary_text_material_light</item>
    </style>

</resources>
